'use client';

import { useEffect, useState } from 'react';
import { useRouter } from 'next/navigation';
import Link from 'next/link';
import { useAuth } from '@/components/AuthProvider';
import { Search, TrendingUp, BookOpen, Clock, Play, ChevronRight } from 'lucide-react';
import { Category, Video } from '@/types';

type SortType = 'newest' | 'popular' | 'oldest';

// Videoå‹ã‚’æ‹¡å¼µï¼ˆDBã«ã¯å­˜åœ¨ã™ã‚‹ãŒtypeså®šç¾©ã«ãªã„å ´åˆï¼‰
type ExtendedVideo = Video & {
  custom_thumbnail_url?: string;
};

export default function Home() {
  const router = useRouter();
  const { user } = useAuth();
  const [categories, setCategories] = useState<Category[]>([]);
  const [videos, setVideos] = useState<ExtendedVideo[]>([]);
  const [recentVideos, setRecentVideos] = useState<ExtendedVideo[]>([]);
  const [isLoading, setIsLoading] = useState(true);
  const [searchQuery, setSearchQuery] = useState('');
  const [sortType, setSortType] = useState<SortType>('newest');

  const popularKeywords = ['PMF', 'ãƒ“ã‚¸ãƒã‚¹ãƒ¢ãƒ‡ãƒ«', 'ãƒãƒ¼ã‚±ãƒƒãƒˆã‚µã‚¤ã‚º', 'ãƒ”ãƒƒãƒ', 'ã‚¹ã‚¿ãƒ¼ãƒˆã‚¢ãƒƒãƒ—', 'è³‡é‡‘èª¿é”'];

  useEffect(() => {
    async function loadData() {
      try {
        const [catRes, videosRes] = await Promise.all([
          fetch('/api/categories'),
          fetch('/api/videos/featured?limit=12')
        ]);
        const catData = await catRes.json();
        const videosData = await videosRes.json();
        setCategories(catData.categories || []);
        setVideos(videosData.videos || []);

        // ãƒ­ã‚°ã‚¤ãƒ³æ™‚ã¯æœ€è¿‘è¦‹ãŸå‹•ç”»ã‚’å–å¾—
        if (user) {
          try {
            const historyRes = await fetch('/api/mypage/history?limit=6');
            const historyData = await historyRes.json();
            setRecentVideos(historyData.history?.map((h: any) => h.video) || []);
          } catch (e) {
            console.error('Failed to load history:', e);
          }
        }
      } catch (error) {
        console.error('Failed to load data:', error);
      } finally {
        setIsLoading(false);
      }
    }
    loadData();
  }, [user]);

  const handleSearch = (query: string) => {
    if (query.trim()) {
      router.push(`/search?q=${encodeURIComponent(query.trim())}`);
    }
  };

  const handleKeyDown = (e: React.KeyboardEvent) => {
    if (e.key === 'Enter') {
      handleSearch(searchQuery);
    }
  };

  // ã‚½ãƒ¼ãƒˆæ¸ˆã¿å‹•ç”»
  const sortedVideos = [...videos].sort((a, b) => {
    switch (sortType) {
      case 'newest':
        return new Date(b.created_at || 0).getTime() - new Date(a.created_at || 0).getTime();
      case 'oldest':
        return new Date(a.created_at || 0).getTime() - new Date(b.created_at || 0).getTime();
      case 'popular':
        return (b.view_count || 0) - (a.view_count || 0);
      default:
        return 0;
    }
  });

  // YouTube URLã‹ã‚‰IDã‚’æŠ½å‡º
  const getYoutubeId = (url: string): string | null => {
    if (!url) return null;
    const shortMatch = url.match(/youtu\.be\/([a-zA-Z0-9_-]+)/);
    if (shortMatch) return shortMatch[1];
    const longMatch = url.match(/[?&]v=([a-zA-Z0-9_-]+)/);
    if (longMatch) return longMatch[1];
    return null;
  };

  const getThumbnailUrl = (video: ExtendedVideo): string => {
    if (video.custom_thumbnail_url) return video.custom_thumbnail_url;
    if (video.thumbnail_url) return video.thumbnail_url;
    const ytId = getYoutubeId(video.video_url || '');
    if (ytId) return `https://img.youtube.com/vi/${ytId}/mqdefault.jpg`;
    return '/placeholder.jpg';
  };

  const formatDuration = (duration: string | number | null | undefined): string => {
    if (!duration) return '';
    if (typeof duration === 'number') {
      const minutes = Math.floor(duration / 60);
      const seconds = duration % 60;
      return `${minutes}:${seconds.toString().padStart(2, '0')}`;
    }
    const durationStr = String(duration);
    if (durationStr.includes(':')) return durationStr;
    const match = durationStr.match(/PT(?:(\d+)H)?(?:(\d+)M)?(?:(\d+)S)?/);
    if (match) {
      const hours = parseInt(match[1] || '0');
      const minutes = parseInt(match[2] || '0');
      const seconds = parseInt(match[3] || '0');
      if (hours > 0) {
        return `${hours}:${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
      }
      return `${minutes}:${seconds.toString().padStart(2, '0')}`;
    }
    return durationStr;
  };

  // ã‚¹ã‚±ãƒ«ãƒˆãƒ³UI
  if (isLoading) {
    return (
      <div className="min-h-screen bg-gray-50">
        {/* ãƒ˜ãƒƒãƒ€ãƒ¼ã‚¹ã‚±ãƒ«ãƒˆãƒ³ */}
        <header className="sticky top-0 z-50 bg-white border-b border-gray-200">
          <div className="max-w-7xl mx-auto px-4">
            <div className="flex items-center justify-between h-16">
              <div className="h-8 w-48 bg-gray-200 rounded animate-pulse" />
              <div className="h-10 w-80 bg-gray-200 rounded-full animate-pulse" />
              <div className="h-8 w-24 bg-gray-200 rounded animate-pulse" />
            </div>
          </div>
        </header>
        <main className="max-w-7xl mx-auto px-4 py-8">
          {/* ã‚­ãƒ¼ãƒ¯ãƒ¼ãƒ‰ã‚¹ã‚±ãƒ«ãƒˆãƒ³ */}
          <div className="flex gap-2 mb-8">
            {[...Array(6)].map((_, i) => (
              <div key={i} className="h-8 w-20 bg-gray-200 rounded-full animate-pulse" />
            ))}
          </div>
          {/* ã‚«ãƒ†ã‚´ãƒªã‚¹ã‚±ãƒ«ãƒˆãƒ³ */}
          <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-12">
            {[...Array(6)].map((_, i) => (
              <div key={i} className="h-40 bg-gray-200 rounded-xl animate-pulse" />
            ))}
          </div>
          {/* å‹•ç”»ã‚¹ã‚±ãƒ«ãƒˆãƒ³ */}
          <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {[...Array(6)].map((_, i) => (
              <div key={i} className="space-y-3">
                <div className="aspect-video bg-gray-200 rounded-xl animate-pulse" />
                <div className="h-4 w-3/4 bg-gray-200 rounded animate-pulse" />
                <div className="h-3 w-1/2 bg-gray-200 rounded animate-pulse" />
              </div>
            ))}
          </div>
        </main>
      </div>
    );
  }

  return (
    <div className="min-h-screen bg-gray-50">
      {/* ãƒ˜ãƒƒãƒ€ãƒ¼ */}
      <header className="sticky top-0 z-50 bg-white border-b border-gray-200">
        <div className="max-w-7xl mx-auto px-4">
          <div className="flex items-center justify-between h-16 gap-4">
            {/* ãƒ­ã‚´ */}
            <Link href="/" className="flex items-center gap-2 flex-shrink-0">
              <div className="w-10 h-10 bg-gradient-to-br from-blue-600 to-purple-600 rounded-xl flex items-center justify-center">
                <BookOpen className="w-6 h-6 text-white" />
              </div>
              <span className="font-bold text-lg text-gray-900 hidden sm:block">
                èµ·æ¥­ã®ç§‘å­¦
              </span>
            </Link>

            {/* æ¤œç´¢çª“ */}
            <div className="flex-1 max-w-xl">
              <div className="relative">
                <Search className="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-gray-400" />
                <input
                  type="text"
                  value={searchQuery}
                  onChange={(e) => setSearchQuery(e.target.value)}
                  onKeyDown={handleKeyDown}
                  placeholder="ã‚­ãƒ¼ãƒ¯ãƒ¼ãƒ‰ã§å‹•ç”»ã‚’æ¤œç´¢..."
                  className="w-full pl-12 pr-4 py-2.5 bg-gray-100 border border-gray-200 rounded-full text-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent focus:bg-white transition"
                />
                <button
                  onClick={() => handleSearch(searchQuery)}
                  className="absolute right-1 top-1/2 -translate-y-1/2 px-4 py-1.5 bg-gray-200 hover:bg-gray-300 text-gray-700 text-sm font-medium rounded-full transition"
                >
                  æ¤œç´¢
                </button>
              </div>
            </div>

            {/* ãƒ¦ãƒ¼ã‚¶ãƒ¼ãƒ¡ãƒ‹ãƒ¥ãƒ¼ */}
            <div className="flex items-center gap-3 flex-shrink-0">
              {user ? (
                <>
                  <Link
                    href="/mypage"
                    className="flex items-center gap-2 hover:opacity-80 transition"
                  >
                    <div className="w-9 h-9 bg-gradient-to-br from-purple-500 to-pink-500 rounded-full flex items-center justify-center text-white font-bold text-sm">
                      {user.email?.charAt(0).toUpperCase()}
                    </div>
                    <span className="text-sm font-medium text-gray-700 hidden md:block">
                      {user.email?.split('@')[0]}
                    </span>
                  </Link>
                </>
              ) : (
                <Link
                  href="/auth/login"
                  className="px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 transition"
                >
                  ãƒ­ã‚°ã‚¤ãƒ³
                </Link>
              )}
            </div>
          </div>
        </div>
      </header>

      <main className="max-w-7xl mx-auto px-4 py-6">
        {/* ã‚ˆãæ¤œç´¢ã•ã‚Œã‚‹ã‚­ãƒ¼ãƒ¯ãƒ¼ãƒ‰ */}
        <section className="mb-8">
          <div className="flex items-center gap-2 text-sm text-gray-500 mb-3">
            <TrendingUp className="w-4 h-4" />
            <span>ã‚ˆãæ¤œç´¢ã•ã‚Œã‚‹ã‚­ãƒ¼ãƒ¯ãƒ¼ãƒ‰</span>
          </div>
          <div className="flex flex-wrap gap-2">
            {popularKeywords.map((keyword) => (
              <button
                key={keyword}
                onClick={() => handleSearch(keyword)}
                className="px-4 py-2 bg-white border border-gray-200 rounded-full text-sm text-gray-700 hover:bg-gray-50 hover:border-gray-300 transition"
              >
                {keyword}
              </button>
            ))}
          </div>
        </section>

        {/* æœ€è¿‘è¦‹ãŸå‹•ç”»ï¼ˆãƒ­ã‚°ã‚¤ãƒ³æ™‚ã®ã¿ï¼‰ */}
        {user && recentVideos.length > 0 && (
          <section className="mb-10">
            <div className="flex items-center justify-between mb-4">
              <div className="flex items-center gap-2">
                <Clock className="w-5 h-5 text-gray-600" />
                <h2 className="text-xl font-bold text-gray-900">æœ€è¿‘è¦‹ãŸå‹•ç”»</h2>
              </div>
              <Link
                href="/mypage"
                className="text-sm text-blue-600 hover:text-blue-700 flex items-center gap-1"
              >
                ã™ã¹ã¦è¦‹ã‚‹
                <ChevronRight className="w-4 h-4" />
              </Link>
            </div>
            <div className="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4">
              {recentVideos.slice(0, 6).map((video) => (
                <Link
                  key={video.video_id}
                  href={`/video/${video.video_id}`}
                  className="group"
                >
                  <div className="relative aspect-video rounded-lg overflow-hidden bg-gray-200">
                    <img
                      src={getThumbnailUrl(video)}
                      alt={video.title}
                      className="w-full h-full object-cover group-hover:scale-105 transition duration-300"
                    />
                    <div className="absolute inset-0 bg-black/0 group-hover:bg-black/20 transition flex items-center justify-center">
                      <div className="w-10 h-10 bg-black/70 rounded-full flex items-center justify-center opacity-0 group-hover:opacity-100 transition">
                        <Play className="w-5 h-5 text-white ml-0.5" fill="white" />
                      </div>
                    </div>
                  </div>
                  <h3 className="mt-2 text-sm font-medium text-gray-900 line-clamp-2 group-hover:text-blue-600 transition">
                    {video.title}
                  </h3>
                </Link>
              ))}
            </div>
          </section>
        )}

        {/* ã‚³ãƒ³ãƒ†ãƒ³ãƒ„ã‚«ãƒ†ã‚´ãƒª */}
        <section className="mb-10">
          <h2 className="text-xl font-bold text-gray-900 mb-4">ã‚³ãƒ³ãƒ†ãƒ³ãƒ„ã‚«ãƒ†ã‚´ãƒª</h2>
          <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            {categories.map((category) => {
              const hasVideos = (category.video_count || 0) > 0;
              
              const cardContent = (
                <>
                  {/* Coming Soon ãƒãƒƒã‚¸ */}
                  {!hasVideos && (
                    <div className="absolute top-3 right-3 px-2 py-1 bg-gray-800 text-white text-xs font-medium rounded">
                      Coming Soon
                    </div>
                  )}
                  
                  <div className={`w-12 h-12 rounded-xl flex items-center justify-center mb-3 ${
                    category.slug === 'startup-science' ? 'bg-blue-100' :
                    category.slug === 'business-model' ? 'bg-purple-100' :
                    category.slug === 'success-startup' ? 'bg-green-100' :
                    category.slug === 'economy-roundup' ? 'bg-orange-100' :
                    category.slug === 'pitch-analysis' ? 'bg-red-100' :
                    'bg-gray-100'
                  }`}>
                    <span className="text-2xl">
                      {category.slug === 'startup-science' ? 'ğŸ“˜' :
                       category.slug === 'business-model' ? 'ğŸ“Š' :
                       category.slug === 'success-startup' ? 'ğŸš€' :
                       category.slug === 'economy-roundup' ? 'ğŸŒ' :
                       category.slug === 'pitch-analysis' ? 'ğŸ¯' :
                       'ğŸ“'}
                    </span>
                  </div>
                  
                  <h3 className="font-bold text-gray-900 mb-1">{category.name}</h3>
                  <p className="text-sm text-gray-500 mb-4 line-clamp-2">{category.description}</p>
                  
                  <div className="flex items-center justify-between">
                    <span className="text-sm text-gray-400">
                      {hasVideos ? `${category.video_count}æœ¬ã®å‹•ç”»` : 'æº–å‚™ä¸­'}
                    </span>
                    {hasVideos && (
                      <span className="px-3 py-1.5 bg-blue-600 text-white text-sm font-medium rounded-lg">
                        å‹•ç”»ã‚’è¦‹ã‚‹
                      </span>
                    )}
                  </div>
                </>
              );
              
              if (hasVideos) {
                return (
                  <Link
                    key={category.id}
                    href={`/category/${category.slug}`}
                    className="relative bg-white rounded-xl border border-gray-200 p-5 transition hover:shadow-lg hover:scale-[1.02] hover:border-blue-200 cursor-pointer"
                  >
                    {cardContent}
                  </Link>
                );
              }
              
              return (
                <div
                  key={category.id}
                  className="relative bg-white rounded-xl border border-gray-200 p-5 opacity-60 cursor-not-allowed"
                >
                  {cardContent}
                </div>
              );
            })}
          </div>
        </section>

        {/* äººæ°—ã‚³ãƒ³ãƒ†ãƒ³ãƒ„ */}
        <section className="mb-10">
          <div className="flex items-center justify-between mb-4">
            <h2 className="text-xl font-bold text-gray-900">äººæ°—ã‚³ãƒ³ãƒ†ãƒ³ãƒ„</h2>
          </div>
          
          {/* ã‚½ãƒ¼ãƒˆã‚¿ãƒ– */}
          <div className="flex gap-2 mb-6">
            {[
              { key: 'newest' as SortType, label: 'æ–°ã—ã„é †' },
              { key: 'popular' as SortType, label: 'äººæ°—ã®å‹•ç”»' },
              { key: 'oldest' as SortType, label: 'å¤ã„é †' },
            ].map((tab) => (
              <button
                key={tab.key}
                onClick={() => setSortType(tab.key)}
                className={`px-4 py-2 text-sm font-medium rounded-lg transition ${
                  sortType === tab.key
                    ? 'bg-gray-900 text-white'
                    : 'bg-gray-100 text-gray-700 hover:bg-gray-200'
                }`}
              >
                {tab.label}
              </button>
            ))}
          </div>

          {/* å‹•ç”»ã‚°ãƒªãƒƒãƒ‰ */}
          <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {sortedVideos.map((video) => (
              <Link
                key={video.video_id}
                href={`/video/${video.video_id}`}
                className="group"
              >
                <div className="relative aspect-video rounded-xl overflow-hidden bg-gray-200">
                  <img
                    src={getThumbnailUrl(video)}
                    alt={video.title}
                    className="w-full h-full object-cover group-hover:scale-105 transition duration-300"
                  />
                  {/* å†ç”Ÿãƒœã‚¿ãƒ³ã‚ªãƒ¼ãƒãƒ¼ãƒ¬ã‚¤ */}
                  <div className="absolute inset-0 bg-black/0 group-hover:bg-black/30 transition flex items-center justify-center">
                    <div className="w-14 h-14 bg-black/70 rounded-full flex items-center justify-center opacity-0 group-hover:opacity-100 scale-90 group-hover:scale-100 transition">
                      <Play className="w-7 h-7 text-white ml-1" fill="white" />
                    </div>
                  </div>
                  {/* å†ç”Ÿæ™‚é–“ */}
                  {video.duration && (
                    <span className="absolute bottom-2 right-2 px-2 py-0.5 bg-black/80 text-white text-xs font-medium rounded">
                      {formatDuration(video.duration)}
                    </span>
                  )}
                </div>
                <h3 className="mt-3 font-medium text-gray-900 line-clamp-2 group-hover:text-blue-600 transition">
                  {video.title}
                </h3>
                {video.duration && (
                  <div className="flex items-center gap-1 mt-1 text-sm text-gray-500">
                    <Clock className="w-3.5 h-3.5" />
                    <span>{formatDuration(video.duration)}</span>
                  </div>
                )}
              </Link>
            ))}
          </div>
        </section>

        {/* æœªãƒ­ã‚°ã‚¤ãƒ³æ™‚ã®CTA */}
        {!user && (
          <section className="bg-gradient-to-r from-blue-600 to-purple-600 rounded-2xl p-8 text-white text-center">
            <h2 className="text-2xl font-bold mb-4">
              ã™ã¹ã¦ã®ã‚³ãƒ³ãƒ†ãƒ³ãƒ„ã«ã‚¢ã‚¯ã‚»ã‚¹
            </h2>
            <p className="mb-6 opacity-90">
              ã‚¢ã‚«ã‚¦ãƒ³ãƒˆç™»éŒ²ã§ã€ãƒ–ãƒƒã‚¯ãƒãƒ¼ã‚¯ã€è¦–è´å±¥æ­´ã€ãƒ‘ãƒ¼ã‚½ãƒŠãƒ©ã‚¤ã‚ºã•ã‚ŒãŸãŠã™ã™ã‚ãŒåˆ©ç”¨ã§ãã¾ã™
            </p>
            <a
              href="/auth/signup"
              className="inline-block bg-white text-blue-600 px-8 py-3 rounded-lg font-semibold hover:bg-gray-100 transition"
            >
              ç„¡æ–™ã§å§‹ã‚ã‚‹
            </a>
          </section>
        )}
      </main>

      {/* ãƒ•ãƒƒã‚¿ãƒ¼ */}
      <footer className="bg-white border-t border-gray-200 mt-12">
        <div className="max-w-7xl mx-auto px-4 py-8">
          <div className="flex flex-col md:flex-row items-center justify-between gap-4">
            <div className="flex items-center gap-2">
              <div className="w-8 h-8 bg-gradient-to-br from-blue-600 to-purple-600 rounded-lg flex items-center justify-center">
                <BookOpen className="w-4 h-4 text-white" />
              </div>
              <span className="font-bold text-gray-900">èµ·æ¥­ã®ç§‘å­¦å‹•ç”»ãƒãƒ¼ã‚¿ãƒ«</span>
            </div>
            <div className="flex items-center gap-6 text-sm text-gray-500">
              <a href="#" className="hover:text-gray-700 transition">ãŠå•ã„åˆã‚ã›</a>
              <a href="#" className="hover:text-gray-700 transition">åˆ©ç”¨è¦ç´„</a>
              <a href="#" className="hover:text-gray-700 transition">ãƒ—ãƒ©ã‚¤ãƒã‚·ãƒ¼ãƒãƒªã‚·ãƒ¼</a>
            </div>
            <p className="text-sm text-gray-400">
              Â© 2024 èµ·æ¥­ã®ç§‘å­¦. All rights reserved.
            </p>
          </div>
        </div>
      </footer>
    </div>
  );
}
